// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Link {
  id            Int      @id @default(autoincrement())
  url           String
  description   String
  linkCreatedBy User     @relation(fields: [userId], references: [id])
  userId        Int
  createdAt     DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  links     Link[]
}
